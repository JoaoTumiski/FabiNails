<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/Logo_View"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/voltar"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_arrow_back"/>

    <EditText
        android:id="@+id/Nome_registro"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/edit_text_custom_gray"
        android:drawableStart="@drawable/ic_account_box"
        android:drawablePadding="10dp"
        android:drawableTint="#8D9393"
        android:hint="Nome"
        android:inputType="text"
        android:paddingStart="26dp"
        android:textColorHint="#8D9393"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Logo_View"
        tools:ignore="RtlSymmetry" />

    <EditText
        android:id="@+id/email_Registro"
        android:layout_width="320dp"
        android:layout_marginTop="32dp"
        android:layout_height="50dp"
        android:background="@drawable/edit_text_custom_gray"
        android:drawableStart="@android:drawable/sym_action_email"
        android:drawablePadding="10dp"
        android:drawableTint="#8D9393"
        android:hint="E-Mail"
        android:inputType="textEmailAddress"
        android:paddingStart="26dp"
        android:textColorHint="#8D9393"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Nome_registro"
        tools:ignore="RtlSymmetry" />

    <EditText
        android:id="@+id/Senha_Registro"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/edit_text_custom_gray"
        android:drawableStart="@android:drawable/ic_lock_lock"
        android:drawableTint="#8D9393"
        android:drawablePadding="10dp"
        android:hint="@string/senha_cadastro"
        android:inputType="textPassword"
        android:paddingStart="26dp"
        android:textColorHint="#8D9393"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email_Registro"
        tools:ignore="RtlSymmetry" />

    <EditText
        android:id="@+id/RepetirSenha"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/edit_text_custom_gray"
        android:drawableStart="@android:drawable/ic_lock_lock"
        android:drawableTint="#8D9393"
        android:drawablePadding="10dp"
        android:hint="Confirmar Senha"
        android:inputType="textPassword"
        android:paddingStart="26dp"
        android:textColorHint="#8D9393"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Senha_Registro"
        tools:ignore="RtlSymmetry" />

    <Button
        android:id="@+id/Criar_Conta"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_button_login"
        android:hapticFeedbackEnabled="false"
        android:hint="Criar Conta"
        android:textColorHint="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/RepetirSenha" />


</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>